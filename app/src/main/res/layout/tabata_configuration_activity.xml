<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_loader"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.moonapps.moonmoon.tabatatimer.timer_configuration.TabataConfigurationActivity"
    android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tabata_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            android:elevation="4dp"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <include layout="@layout/toolbar_menu"/>
        </android.support.v7.widget.Toolbar>

    <include
        android:id="@+id/configuration_layout"
        layout="@layout/timer_configuration_layout" />
</LinearLayout>
